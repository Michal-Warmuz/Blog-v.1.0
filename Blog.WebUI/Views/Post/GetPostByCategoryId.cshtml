@model Blog.Contracts.ViewModels.PostsByCategoryViewModel



<div style="width: 900px;">
    <h2>@Model.CategoryName</h2>
    <p>@Model.CategoryDescription</p>
    @foreach (var item in Model.Posts)
    {
<div style="float: left; width: 300px;">

    <h4>@item.Title</h4>
    <h6 style="color: brown">@item.CategoryName</h6>
    <p>@item.ShortContent</p>
    <a href="@Url.Action("GetPostDetails", "Post", new { postId = item.PostId })">Czytaj więcej..</a>
</div>
    }
    <div style="clear: both"></div>
</div>

